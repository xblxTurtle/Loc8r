extends layout

block content
    .page-header 
        h1 Add your review
    
    form.form-horizontal(role='form',action="/location", method="get")
        .form-group
            label.col-md-2.control-label(for="inputName") Name
            .col-md-6
                input.form-control(type="text", id="inputName", placeholder="Enter name")
        .form-group
            label.col-md-2.control-label(for="inputRating") Rating
            .col-md-2
                .btn-group
                    select#inputRating.form-control.input-sm(name="rating")
                        option 5
                        option 4
                        option 3
                        option 2
                        option 1
        .form-group
            label.col-md-2.control-label(for="inputReview") Review
            .col-md-6
                textarea.form-control(rows="5", id="inputReview", placeholder="Enter review")
        .form-group
            .col-md-offset-2.col-md-2
                button.btn.btn-default(type="submit") Add my review


